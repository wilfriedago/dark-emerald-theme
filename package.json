{
  "name": "dark-emerald-theme",
  "displayName": "Dark Emerald Theme",
  "version": "1.1.0",
  "description": "Another minimalist dark theme for Visual Studio Code",
  "categories": [
    "Themes"
  ],
  "keywords": [
    "Theme",
    "Dark Theme",
    "Minimalist Theme"
  ],
  "homepage": "https://github.com/wilfriedago/dark-emerald-theme/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/wilfriedago/dark-emerald-theme/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wilfriedago/dark-emerald-theme"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Wilfried AGO",
    "email": "hi@wilfriedago.me",
    "url": "https://wilfriedago.me"
  },
  "contributors": [
    {
      "name": "Wilfried AGO",
      "email": "hi@wilfriedago.me",
      "url": "https://wilfriedago.me"
    }
  ],
  "publisher": "wilfriedago",
  "scripts": {
    "package": "vsce package",
    "prepare": "husky",
    "publish": "vsce publish",
    "release": "semantic-release"
  },
  "contributes": {
    "themes": [
      {
        "id": "dark-emerald",
        "label": "Dark Emerald",
        "uiTheme": "vs-dark",
        "path": "./themes/dark-emerald.json"
      },
      {
        "id": "dark-emerald-italics",
        "label": "Dark Emerald Italics",
        "uiTheme": "vs-dark",
        "path": "./themes/dark-emerald-italics.json"
      }
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@vscode/vsce": "^3.6.0",
    "husky": "^9.1.7",
    "semantic-release": "^24.2.7"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
  "engines": {
    "vscode": "^1.90.0"
  },
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "footer-max-line-length": [1, "always", 200]
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/git",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "label": "Dark Emerald Theme ${nextRelease.gitTag}",
              "name": "dark-emerald-theme-${nextRelease.gitTag}.vsix",
              "path": "dark-emerald-theme-${lastRelease.gitTag}.vsix"
            }
          ]
        }
      ]
    ]
  }
}
